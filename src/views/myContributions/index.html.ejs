<section class="text-center my-5">
	<div class="container">
		<div class="row">
			<!--Table-->
			<table class="table table-striped">
		
					<!--Table head-->
					<thead>
							<tr>
									<th>Project</th>
									<th>Amount</th>
									<th>Date</th>
							</tr>
					</thead>
					<!--Table head-->
		
					<!--Table body-->
					<tbody>
							<% contributions.forEach((contribution, i) => {%>
								<tr>
									<td><a href="<%= projectPath(contribution.Project.slug) %>"><%= contribution.Project.title %></a></td>
									<td><%= contribution.amount %></td>
									<td><%= formatDate(contribution.createdAt) %></td>
								</tr>
							<% }) %>
					</tbody>
					<!--Table body-->
		
			</table>
			<!--Table-->
		</div>
	</div>
</section>
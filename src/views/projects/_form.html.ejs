<form method="POST" action="<%= submitProjectPath %>" enctype="multipart/form-data">
  <%if (!project.isNewRecord) { %>
    <input type="hidden" name="_method" value="patch" />
  <% }%>
  <div class="md-form">
    <label for="title">Title</label>
    <input type="text" id="title" name="title" value="<%= project.title %>" class="form-control">
  </div>
  <div class="md-form">
    <label for="description">Description</label>
    <textarea id="description" name="description" class="form-control md-textarea"><%= project.description %></textarea>
  </div>
  <div class="md-form">
      <i class="fa fa-dollar prefix"></i>
    <input type="number" id="goal" name="goal" value="<%= project.goal %>" class="form-control">
    <label for="goal">Goal</label>
  </div>
  <div class="md-form">
      <input type="file" name="img" multiple class="form-control">
  </div>
  <div class="d-flex justify-content-center">
      <%- include('../utils/_errorCard') %>
  </div>
  <div>
    <button type="submit" class="btn btn-primary">
      <%if (project.isNewRecord) { %>
        Create
      <% } else { %>
        Update
      <% } %>
    </button>
  </div>
</form>
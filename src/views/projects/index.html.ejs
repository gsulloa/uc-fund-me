<!-- Projects section v.1 -->
<section class="text-center my-5">

  <!-- Section heading -->
  <h2 class="h1-responsive font-weight-bold my-5">Projects</h2>
  <!-- Section description -->
  <p class="grey-text w-responsive mx-auto mb-5">Here you can see all the active projects. Go and fund one!</p>

  <form class="form-inline md-form form-sm" id="search-form">
    <input class="form-control form-control-sm ml-3 w-90" type="text" placeholder="Search" aria-label="Search" name="q" value="<%= q %>">
    <button type="button" class="btn btn-primary btn-sm">
      <i class="fa fa-search"></i>
    </button>
  </form>

  <!-- Grid row -->
  <div class="row text-center">
    <% projects.forEach((project, i) => { %>
    
    <!-- Grid column -->
      <div class="col-lg-4 col-md-12 mb-lg-0 mb-4 project-container">
        <!--Featured image-->
        <div class="view overlay rounded z-depth-1  img">
          <!-- <img src="https://mdbootstrap.com/img/Photos/Others/images/58.jpg" class="img-fluid" alt="Sample project image"> -->
           <img
            src="<%= project.Images.length ? `/images/${project.Images[0].name}` : "/img/no-photo.png"%>"
            class="img-fluid"
            alt="photo"
          >
          <a href="<%= projectPath(project.slug) %>">
            <div class="mask rgba-white-slight"></div>
          </a>
        </div>
        <!--Excerpt-->
        <div class="card-body pb-0 info">
          <h4 class="font-weight-bold my-3"><%= project.title %></h4>
          <p>by <a class="font-weight-bold"><%= project.User.name %></a>, <%= formatDate(project.createdAt) %></p>
          <h5 class="font-weight-bold mt-2 mb-3 green-text"><i class="fa fa-money pr-2"></i> <%= project.goal %></h5>
          <div class="text-center">
              <div class="progress">
                  <div class="progress-bar" role="progressbar" style="width: <%= project.totalContributions * 100 / project.goal %>%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
              </div>
              <p class="mb-0"><%= formatAsCurrency(project.totalContributions) %> / <%= formatAsCurrency(project.goal) %></p>
          </div>
          <p class="grey-text"><%= project.description %>
          </p>
          <a class="btn btn-indigo btn-sm" href="<%= projectPath(project.slug) %>"><i class="fa fa-clone left"></i> View project</a>
          <% if (admin) { %>
            <form method="POST" action="<%= deletePath(project.slug) %>" enctype="multipart/form-data">
              <input type="hidden" name="_method" value="delete" />
              <button id='deleteButton' class="btn btn-red btn-sm"><i class="fa fa-trash left"></i> Delete project</button>
            </form>
          <% } %>
          <% if (project.reported && admin) { %>
            <p>This project has been reported and it is waiting to be moderated.</p>
            <form method="POST" action="<%= approvePath(project.slug) %>" enctype="multipart/form-data">
              <input type="hidden" name="_method" value="delete" />
              <button id='deleteButton' class="btn btn-green btn-sm"><i class="fa fa-check left"></i> Approve project</button>
            </form>
          <% } %>
        </div>
      </div>
    <% }) %>
    <!-- Grid column -->
  </div>
  <!-- Grid row -->
<!-- <a href="<%= newProjectPath %>">new project</a> -->
</section>
<!-- Projects section v.1 -->
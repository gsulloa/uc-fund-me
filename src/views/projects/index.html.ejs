<div class="container-fluid container-search">
  <div class="container">
    <div class="row justify-content-center">
      <h1>Projects</h1>
    </div>
    <!-- Search form -->
<form class="form-inline md-form form-sm">
    <input class="form-control form-control-sm ml-3 w-75" type="text" placeholder="Search" aria-label="Search" name="q" value="<%= q %>">
    <button class="btn btn-outline-white btn-md my-2 my-sm-0 ml-3 waves-effect waves-light">
      <i class="fa fa-search" aria-hidden="true"></i> 
    </button>
</form>

  </div>
</div>
<div class="container">
  <div class="row projects">
      <% projects.forEach(project => { %>
        <div class="col-sm-3">
          <!--Card-->
          <div class="card">

              <!--Card image-->
              <div class="view">
                  <img src="/img/no-photo.png" class="img-fluid" alt="photo">
                  <a href="#">
                      <div class="mask rgba-white-slight"></div>
                  </a>
              </div>

              <!--Card content-->
              <div class="card-body">
                  <!--Title-->
                  <h4 class="card-title"><%= project.title %></h4>
                  <!--Text-->
                  <p class="card-text"><%= project.description %></p>
                  <a href="<%= projectPath(project.slug) %>" class="btn btn-primary">Ver</a>
              </div>
              
              <div class="card-footer text-muted danger-color white-text text-center">
                  <div class="progress">
                      <div class="progress-bar" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                  </div>
                  <p class="mb-0"><%= formatAsCurrency(0) %> / <%= formatAsCurrency(project.goal) %></p>
              </div>

          </div>
          <!--/.Card-->
        </div>
      <% }) %>
  </div>
</div>